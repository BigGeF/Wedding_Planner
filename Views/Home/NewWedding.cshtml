@{
    ViewData["Title"] = "Plan Your Wedding";
}

@model WeddingPlanner.Models.Plan

<div class="row">
    <div class="col-6">
        <h1>Plan Your Wedding</h1>
    </div>
    <div class="col-3">
        <a href="/dashboard">Dashboard</a>
    </div>
    <div class="col-3">
        <a href="/logout">Logout</a>
    </div>
</div>
<form action="/add-new-wedding" method="POST" class="NewWeddingForm">
            <div class="form-group">
                <label asp-for="Wedder1"></label>
                <input type="text" class="form-control" asp-for="Wedder1" id="Wedder1" placeholder="Wedder 1">
                <span asp-validation-for="Wedder1" class="validationMsg"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wedder2"></label>
                <input type="text" class="form-control" asp-for="Wedder2" id="Wedder2" placeholder="Wedder 2">
                <span asp-validation-for="Wedder2" class="validationMsg"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input type="date" class="form-control" asp-for="Date" id="Date">
                <span asp-validation-for="Date" class="validationMsg"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input type="text" class="form-control" asp-for="Address" id="Address" aria-describedby="emailHelp" placeholder="Wedding Address">
                <span asp-validation-for="Address" class="validationMsg"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>